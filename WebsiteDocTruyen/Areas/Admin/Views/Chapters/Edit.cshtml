@model WebsiteDocTruyen.ViewModels.ChapterViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<h3 class="text-center text-uppercase">Chọn chương muốn chỉnh sửa</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.HiddenFor(model => model.StoryID)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h5>Truyện: @ViewBag.StoryTitle</h5>
        </div>

        <div class="form-group">
            <strong>Chương muốn chỉnh sửa</strong>
            <div class="col-md-10">
                @Html.DropDownList("ChapterID", (IEnumerable<SelectListItem>)ViewBag.ChapterList, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <strong>Tên chương</strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <strong>Nội dung chương</strong>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control", style = "height:300px" } )
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="OK" class="btn btn-primary" style="margin-right:4px" />
                @Html.ActionLink("Trở về", "Index", "Stories", "Admin", new { @class = "btn btn-outline-success" })
            </div>
        </div>
    </div>
}
