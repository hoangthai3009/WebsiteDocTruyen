@model WebsiteDocTruyen.ViewModels.ReadViewModel
@{
    ViewBag.Title = "Read";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-uppercase">@Model.StoryTitle</h2>
<h5 class="text-center" style="margin-bottom:20px">@Model.Title</h5>

<div style="font-size:24px">
    @Html.Raw(new MarkdownSharp.Markdown().Transform(Model.Content))
</div>

<div class="text-center">
    @if (Model.PreviousChapterID != 0)
    {
        <a class="btn btn-outline-success" 
           href="@Url.Action("Read", "Home", new { storyId = Model.StoryID, chapterId = Model.PreviousChapterID })">
            <i class="fa-solid fa-chevron-left"></i> Chương trước
        </a>
    }
    <a class="btn btn-outline-primary" href="@Url.Action("Details", "Stories", new { id = Model.StoryID })"><i class="fas fa-contact-book"></i></a>
    @if (Model.NextChapterID != 0)
    {
        <a class="btn btn-outline-success" 
           href="@Url.Action("Read", "Home", new { storyId = Model.StoryID, chapterId = Model.NextChapterID })">
            Chương tiếp <i class="fa-solid fa-chevron-right"></i>
        </a>
    }
</div>

